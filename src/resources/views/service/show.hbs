<style>
    .container {
        margin-top: 30px;
        max-width: 1000px;
    }

    .table {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        background-color: #f8f9fa;
    }

    .table thead th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        text-align: center;
        border-bottom: 2px solid #ddd;
    }

    .table tbody tr:hover {
        background-color: #e9ecef;
        transition: background-color 0.3s ease;
    }

    .table tbody td {
        text-align: center;
        vertical-align: middle;
    }

    .table tbody img {
        border-radius: 8px;
        object-fit: cover;
    }

    .table tbody tr {
        cursor: pointer;
        transition: transform 0.2s ease, background-color 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
        transform: scale(1.01);
    }

    /* CSS cho nút hành động */
    .btn {
        padding: 5px 10px;
        margin: 0 3px;
        font-size: 14px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }
</style>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên dịch vụ</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Giá</th>
                <th scope="col">Thời gian ước tính</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each services}}
            <tr onclick="showDetail('{{dataValues.SERVICE_ID}}')" style="cursor: pointer;">
                <th scope="row">{{increment @index}}</th>
                <td>{{dataValues.NAME}}</td>
                <td>{{dataValues.DESCRIPTION}}</td>
                <td>{{dataValues.PRICE}}</td>
                <td>{{dataValues.ESTIMATE_TIME}}</td>
                <td><img src="data:image/jpeg;base64,{{dataValues.IMAGE}}" alt="Service Image" width="250px"
                        height="100px">
                </td>
                <td>
                    <a href="/api/services/edit/{{dataValues.SERVICE_ID}}" role="button" class="btn btn-primary">Chỉnh
                        sửa</a>
                    <a href="/api/services/delete/{{dataValues.SERVICE_ID}}" role="button"
                        class="btn btn-danger">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    function showDetail(serviceId) {
        window.location.href = `/api/services/detail/${serviceId}`;
    }
</script>