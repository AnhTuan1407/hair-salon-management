<div class="container mt-4">
    {{#with customer}}
    <div>
        <div class="mb-3">
            <label for="name" class="form-label">Họ và tên</label>
            <input type="text" class="form-control" id="name" name="name" value="{{NAME}}" disabled>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{EMAIL}}" disabled>
        </div>

        <div class="mb-3">
            <label for="gender" class="form-label">Giới tính</label>
            <input type="text" class="form-control" id="email" name="email" value="{{GENDER}}" disabled>
        </div>

        <div class="mb-3">
            <label for="address" class="form-label">Địa chỉ</label>
            <input type="text" class="form-control" id="address" name="address" value="{{ADDRESS}}" disabled>
        </div>

        <div class="mb-3">
            <label for="phone" class="form-label">Số điện thoại</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{PHONE}}" disabled>
        </div>

        <div class="mb-3">
            <label for="role" class="form-label">Ngày sinh</label>
            <input type="text" class="form-control" id="role" name="role" value="{{DATE_OF_BIRTH}}" disabled>
        </div>

        <div class="mb-3">
            <label for="accountId" class="form-label">Điểm tích lũy</label>
            <input type="text" class="form-control" id="points" name="points" value="{{POINTS}}" disabled>
        </div>

        <div class="mb-3">
            <label for="accountId" class="form-label">Tài khoản</label>
            <input type="text" class="form-control" id="accountId" name="accountId" value="{{ACCOUNT_ID}}" disabled>
        </div>

    </div>
    {{/with}}
    </form>
</div>